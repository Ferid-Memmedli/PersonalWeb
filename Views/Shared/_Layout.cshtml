                $("#LogoSrc").attr('src', data.LogoSrc);
                $("#PhoneNumber").attr('href', 'tel:' + data.PhoneNumber);
                $("#PhoneNumber").append(data.PhoneNumber);
                $("#Email").attr('href', 'mailto:' + data.Email);
                $("#DownloadCv").attr('download', data.DownloadCv);
                $("#Email").append(data.Email);
                $("#FullName").append(data.FullName);
                $("#ShortDescription").append(data.ShortDescription);
                $("#Job").append(data.Job);
                $("#Email1").append(data.Email);
                $("#Location").append(data.Location);
                $("#ImageSrc").attr('src', data.ImageSrc);
            });

        });
